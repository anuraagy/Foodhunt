- if @recipe.errors.messages[:user]
  %p.notice.alert-dismissible.alert-warning{:style => "padding: 10px"}
    = @recipe.errors.messages[:user].first

= form_for @recipe, :html => { :class => "form-horizontal" } do |f|
  %fieldset
    .form-group.recipe-form
      = f.label :title, :class => "control-label"
      = f.text_field :title, :class => "form-control"
      = f.error_message_on :title, :class => "form-control"
    .form-group.recipe-form
      = f.label :tagline, :class => "control-label"
      = f.text_field :tagline, :class => "form-control"
      = f.error_message_on :tagline, :class => "form-control"
    .form-group.recipe-form
      = f.label :link, :class => "control-label"
      = f.text_field :link, :class => "form-control"
      = f.error_message_on :link, :class => "form-control"
    .form-group.recipe-form
      = f.label :image, :class => "control-label"
      = f.text_field :image, :class => "form-control"
      = f.error_message_on :image, :class => "form-control"
    .form-group.recipe-form
      = f.submit "Submit", :class => "btn btn-primary"

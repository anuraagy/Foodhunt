.recipes-row
  = render @recipe

.page-header
  %h3 Comments

.comments
  = render @recipe.comments
  - if current_user
    = form_tag comments_path, :remote => true, :id => "comment_form" do
      .form-group
        = text_area_tag :comment,"", :placeholder => "Add a comment", :class => "form-control", :id => "comment", :style => "margin-top: 20px;", :required => true
        = hidden_field_tag :recipe, @recipe.id
        = submit_tag "Post", :class => "form-control btn btn-primary", :style => "margin-top: 20px;", :id => "comment_submit"

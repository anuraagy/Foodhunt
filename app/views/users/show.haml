.row
  .col-md-6.col-md-offset-5
    = image_tag @user.image, :width => 150, :height => 150, :style => "border-radius: 50%;"

.name{:style => "padding-top:20px"}
  = @user.name
  = link_to "Edit", "javascript:void(0)", :id => "edit_name", :style => "font-size: 16px"

.job
  - if @user.job?
    .center-text
      = @user.job
      = link_to "Edit", "javascript:void(0)", :id => "edit_job", :style => "font-size: 12px"
  - elsif @user == current_user
    .form-group.col-md-4.col-md-offset-4.job-form
      .input-group{:style => "padding-top:20px"}
        = text_field_tag :job, @user.job, :placeholder => "Add a job title...", :class => "form-control", :id => "add_job"
        = link_to "Submit", "javascript:void(0)", :class => "input-group-addon", :id => "job_submit"
  - else
    Foodhunt User
%br
%br

.recipes-row
  .page-header
    %h3 Submitted
  = render @user.submitted
  .page-header
    %h3 Voted
  = render @user.voted
